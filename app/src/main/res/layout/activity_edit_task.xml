<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#A3E9F7EF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTask">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_navbar"
        android:layout_height="198dp">

        <TextView
            android:id="@+id/titlepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/average_sans"
            android:textAlignment="center"
            android:text="Edit Task Details"
            android:textColor="#fff"
            android:textSize="27sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/rounded_list_card"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="-45dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edittitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Title"
                android:layout_marginBottom="10dp"
                android:textColor="#0A1458"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/titleTask"
                android:background="@drawable/input_field_task"
                android:inputType="text"
                android:paddingLeft="7dp"
                android:textColorHint="#B8A3A3"
                android:textColor="#000"
                android:maxLength="30"
                android:text="Buy something"
                android:layout_width="match_parent"
                android:layout_height="47dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Description"
                android:layout_marginBottom="10dp"
                android:textColor="#0A1458"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/descTask"
                android:background="@drawable/input_field_task"
                android:inputType="textMultiLine"
                android:paddingLeft="7dp"
                android:textColorHint="#B8A3A3"
                android:textColor="#000"
                android:maxLength="90"
                android:text="Go to supermarket first"
                android:layout_width="match_parent"
                android:layout_height="62dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Target Date"
                android:layout_marginBottom="10dp"
                android:textColor="#0A1458"
                android:textSize="19sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="47dp">
                <EditText
                    android:id="@+id/dateTask"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_field_task"
                    android:text="2020-10-15"
                    android:inputType="date"
                    android:paddingLeft="7dp"
                    android:textColor="#000"
                    android:textColorHint="#B8A3A3"
                    tools:ignore="MissingConstraints"
                    android:editable="false"
                    tools:layout_editor_absoluteY="2dp" />

                <ImageButton
                    android:id="@+id/datePickerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:datePickerMode="calendar"
                    android:background="@color/lightBlue"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="2dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/updateTaskBtn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/create_btn"
        android:fontFamily="sans-serif-medium"
        android:text="Save Update"
        android:textColor="#FFF"
        android:textStyle="bold" />
    <Button
        android:id="@+id/deleteTaskBtn"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="DELETE"
        android:background="@drawable/delete_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"/>

</LinearLayout>